{
	"name": "did-auth",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo '' && husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"db:generate": "pnpm exec drizzle-kit generate",
		"db:migrate": "pnpm exec wrangler d1 migrations apply did-ucan-preview --local",
		"db:migrate:preview": "pnpm exec wrangler d1 migrations apply did-ucan-preview --remote",
		"db:migrate:prod": "pnpm exec wrangler d1 migrations apply did-ucan --remote --env production",
		"generate-server-keys": "pnpm exec tsx scripts/generate-server-keys.ts"
	},
	"dependencies": {
		"@paralleldrive/cuid2": "^2.2.2",
		"@sveltejs/adapter-cloudflare": "^5.1.0",
		"@sveltejs/kit": "^2.20.2",
		"@ucans/ucans": "^0.12.0",
		"drizzle-orm": "^0.40.1",
		"resend": "^4.2.0",
		"svelte": "^5.25.3",
		"tailwindcss": "^4.0.17",
		"uint8arrays": "^5.1.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250327.0",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.23.0",
		"@sveltejs/adapter-cloudflare": "^5.0.3",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.17",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/node": "^22.13.14",
		"drizzle-kit": "^0.30.6",
		"eslint": "^9.23.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"jsdom": "^25.0.1",
		"lint-staged": "^15.5.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"tsx": "^4.19.3",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.28.0",
		"vite": "^6.2.5",
		"vitest": "^3.0.9",
		"wrangler": "^4.6.0"
	},
	"engines": {
		"node": ">=20.19.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"lint-staged": {
		"*.{ts,svelte}": [
			"prettier --check",
			"eslint --max-warnings=0"
		],
		"*.{css,html,json}": [
			"prettier --check"
		]
	}
}
